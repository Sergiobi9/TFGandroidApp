<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tfgapp">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TFGapp"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.Concert.CreateConcertActivity"></activity>
        <activity android:name=".Fragments.Navigation.Artist.CreateConcertFragment" />
        <activity android:name=".Activities.Register.RegisterCustomLikesActivity" />
        <activity android:name=".Activities.Register.RegisterAccountActivity" />
        <activity android:name=".Activities.SignIn.AuthenticationActivity" />
        <activity android:name=".Activities.Login.LoginActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Broadcasts.UserLocationBroadcast" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>