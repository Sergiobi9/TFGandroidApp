<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/concert_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="15dp"
        android:visibility="visible"
        android:elevation="5dp"
        android:translationZ="0dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/concert_cover"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/concert_tickets_purchased"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_alignParentBottom="true"
                        android:textSize="36sp"
                        android:fontFamily="@font/lato"
                        android:layout_gravity="bottom"
                        android:text="x4">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/top_layout"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/concert_info_layout"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:layout_height="wrap_content"
                        android:translationZ="1dp"
                        android:layout_below="@+id/concert_cards"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/concert_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:maxLines="1"
                            android:fontFamily="@font/lato"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="Palau Sant Jordi - Barcelona"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/grey"/>


                        <TextView
                            android:id="@+id/concert_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:fontFamily="@font/lato"
                            android:text="Post Malone"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/directions"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/directions">
                            </ImageView>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp">
                            </ImageView>

                            <TextView
                                android:id="@+id/concert_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:maxLines="1"
                                android:fontFamily="@font/lato"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:text="31th February 2021"
                                android:textColor="@color/grey"/>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>