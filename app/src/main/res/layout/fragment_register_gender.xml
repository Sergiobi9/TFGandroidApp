<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Register.Fragments.RegisterEmailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="25dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/which_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="¿Cuál es tu género?"
            android:textSize="28sp">
        </TextView>

        <GridLayout
            android:id="@+id/genders_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/which_email_tv"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gender_female_btn"
                android:background="@drawable/gender_boxes"
                android:text="Mujer"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:fontFamily="@font/lato"
                android:textAllCaps="false"
                android:layout_marginRight="10dp">
            </Button>

            <Button
                android:id="@+id/gender_male_btn"
                android:background="@drawable/gender_boxes"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:fontFamily="@font/lato"
                android:textAllCaps="false"
                android:text="Hombre">
            </Button>

            <Button
                android:id="@+id/gender_no_binary_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/gender_boxes"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato"
                android:textAllCaps="false"
                android:text="No binario">

            </Button>



        </GridLayout>


    </RelativeLayout>

</FrameLayout>