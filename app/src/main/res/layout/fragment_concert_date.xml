<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Register.Fragments.UserAccount.RegisterEmailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/concert_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="Â¿Que dia se va a dar lugar {{concertName}}?"
            android:textSize="28sp"></TextView>

        <DatePicker
            android:id="@+id/concert_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/concert_date_tv"
            android:layout_marginTop="50dp"
            android:calendarTextColor="@color/grey"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black" />

        <Button
            android:id="@+id/concert_date_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/concert_date_picker"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/black_btn"
            android:fontFamily="@font/lato"
            android:text="NEXT"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12dp"></Button>

    </RelativeLayout>

</FrameLayout>